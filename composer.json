{
    "name": "atakanatici/laravel-edm",
    "description": "edm e-invoice for laravel",
    "keywords": [
        "AtakanAtici",
        "laravel",
        "laravel-edm"
    ],
    "homepage": "https://github.com/atakanatici/laravel-edm",
    "license": "MIT",
    "authors": [
        {
            "name": "ATAKAN ATICI",
            "email": "atakanatici0@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "AtakanAtici\\EDM\\": "src/",
            "AtakanAtici\\EDM\\Classes\\": "src/Classes",
            "AtakanAtici\\EDM\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AtakanAtici\\EDM\\Tests\\": "tests/",
            "AtakanAtici\\EDM\\Classes\\": "src/Classes/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AtakanAtici\\EDM\\EDMServiceProvider"
            ],
            "aliases": {
                "EDM": "AtakanAtici\\EDM\\Facades\\EDM"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}